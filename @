package zionomicon.ch3

import zio._
import zio.test._
import zio.random._
import zio.test.Assertion._

object TestPropCheckSpec extends DefaultRunnableSpec {

  def spec = suite("Test illustrate used of Gen and property check")(testRndIntGen)
  val intGen: Gen[Random, Int] =
    Gen.anyInt

  val testRndIntGen = testM("Test illustrate used of Gen and property check") {
    check(intGen, intGen, intGen) { (x, y, z) =>
      val left  = (x + y) + z
      val right = x + (y + z)
      assert(left)(equalTo(right))
    }
  }

}
